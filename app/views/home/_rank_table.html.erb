<div class="container mt-3">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">순위</th>
        <th scope="col">이유</th>
        <th scope="col">공감수</th>
      </tr>
    </thead>

    <tbody>
  <% @rank.each_with_index do |t, index| %>
    <tr>
      <th scope="row"><%= index+4 %></th>
      <td><%= t.reason %></td>
      <td><a href="/like/<%= t.id %>" class="like"><i class="fas fa-thumbs-up fa-2x"></i></a> <%= t.like %></td>
    </tr>

  <% end %>
    </tbody>
  </table>

</div>